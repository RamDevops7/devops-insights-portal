<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>DevOps Insights Portal</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-light">
  <div class="container my-5">
    <h1 class="text-center mb-4">ðŸš€ DevOps Insights Dashboard</h1>

    <div class="row">
      <div class="col-md-6 mb-4">
        <div class="card shadow">
          <div class="card-body">
            <h5 class="card-title text-center">Builds Over Time</h5>
            <canvas id="buildChart"></canvas>
          </div>
        </div>
      </div>
      <div class="col-md-6 mb-4">
        <div class="card shadow">
          <div class="card-body">
            <h5 class="card-title text-center">Deployments</h5>
            <canvas id="deployChart"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    async function loadData() {
      const res = await fetch('/api/metrics-data');
      const data = await res.json();

      new Chart(document.getElementById('buildChart'), {
        type: 'line',
        data: {
          labels: data.timestamps,
          datasets: [{
            label: 'Builds',
            data: data.builds,
            borderColor: 'blue',
            fill: false
          }]
        }
      });

      new Chart(document.getElementById('deployChart'), {
        type: 'bar',
        data: {
          labels: data.timestamps,
          datasets: [{
            label: 'Deploys',
            data: data.deploys,
            backgroundColor: 'green'
          }]
        }
      });
    }
    loadData();
  </script>
</body>
</html>
